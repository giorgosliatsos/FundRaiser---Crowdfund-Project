@using RegenTry3.Model

<form asp-action="Create">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Title:</label>
            <input type="text" class="form-control" id="email" name="Title" placeholder="E.g.(Unity Project 101)">
        </div>
        <div class="form-group col-md-6">
            <label>Description:</label>
            <input type="text" class="form-control" id="description" name="Description" placeholder="E.g.(description)">
        </div>
    </div>
    <div class="form-group">
        <label>Category:</label>
        <select name="Category" class="form-control form-control-sm" placeholder="Category" asp-items="@(Html.GetEnumSelectList<Category>())"></select>
    </div>
    <div class="form-row">

        <div class="input-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text">Videos:</span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input " id="inputGroupFile01">
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            </div>
        </div>

        <div class="input-group col-md-6">
            <div class="input-group-prepend">
                <span class="input-group-text">Photos:</span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile01">
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            </div>
        </div>

    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" value="Create Project" class="btn btn-primary mt-2">Create</button>
    </div>

</form>










