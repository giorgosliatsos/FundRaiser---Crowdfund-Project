@{
    ViewData["Title"] = " Update Post ";
}
<div class="d-flex justify-content-center">
    <h4>Update Post</h4>
</div>

<form class="mt-3" asp-action="UpdatePost">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="newPost"> New Post</label>
            <input name="newPost" id="newPost" class="form-control" placeholder="New name..">
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Update Post" class="btn btn-primary" />
    </div>

</form>

<div class="d-flex justify-content-center">
    <a class="btn btn-danger" asp-action="CreatorIndex">Return</a>
</div>