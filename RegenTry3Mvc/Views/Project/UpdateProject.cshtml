@{
    ViewData["Title"] = "Update Project";
}
@using RegenTry3.Model
@model ProjectImVi

<h1> Update Project</h1>
<form asp-action="UpdateProject" enctype="multipart/form-data">

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Title:</label>
            <input type="text" class="form-control" id="email" name="Project.Title" placeholder="E.g.(Unity Project 101)">
        </div>
        <div class="form-group col-md-6">
            <label>Description:</label>
            <input type="text" class="form-control" id="description" name="Project.Description" placeholder="E.g.(description)">
        </div>
    </div>

    <div class="form-group col-md-6">
        <label>Post:</label>
        <input type="text" class="form-control" id="post" name="Project.Posts" placeholder="E.g. Just started">
    </div>

    <dl>
        <dt>
            <label asp-for="ProjectImage"></label>
        </dt>
        <dd>
            <input asp-for="ProjectImage" type="file">
            <span asp-validation-for="ProjectImage"></span>
        </dd>
    </dl>

    <div class="form-group col-md-6">
        <label>Video:</label>
        <input type="text" class="form-control" id="video" name="Project.Videos" placeholder="Add video URL">
    </div>


    <div class="d-flex justify-content-center">
        <button type="submit" value="Update Project" class="btn btn-primary mt-2">Update</button>
    </div>

</form>










