@model RegenTry3Mvc.Models.ProjectReward
@using RegenTry3Mvc.Models


<div class="d-flex justify-content-center">
    <h1> Project @Model.Project.Title</h1>
</div>

@if (@TempData["Role"].ToString() == "Creator")
{
    <div class="m-3">
        <a href="/Reward/Create/?ProjectId=@Model.Project.Id" class="btn btn-info" role="button">Add Reward</a>
    </div>
}

<table class="table">
    <tr><td><b>Description</b></td> <td>@Model.Project.Description</td></tr>
    <tr>
        <td><b>Post</b></td>
        <td>@Model.Project.Posts</td>
        @if (@TempData["Role"].ToString() == "Creator")
        {<td><a href="/project/updatepost/@Model.Project.Id" data-toogles="tooltip" title="Update Post" class="btn btn-info" role="button">Update post</a></td>}
    </tr>

    <tr>
        <td><b>Photos</b></td>
        @if (@Model.Project.Photos != null)
        {
            <td>  <img src="/images/@Model.Project.Photos" title="Project image" width="100px" height="100px" /> </td>
        }

    </tr>

    <tr>
        <td><b>Videos</b></td>
        @if (@Model.Project.Videos != null)
        {
            <td> <iframe width="360" height="240" src=@Model.Project.Videos title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> </td>
        }
    </tr>




    <tr>
        <td><b>Rewards</b></td>
        <td>
            <dd class="col-sm-10">
                @foreach (var item in Model.Rewards)
                {
                    @Html.DisplayFor(modelItem => item.Title)  @Html.DisplayFor(modelItem => item.Price) <br />

                }
            </dd>
            </td>
    </tr>

